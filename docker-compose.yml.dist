version: "3"
services:
    proxy:
        restart: always
        image: traefik
        ports:
            - "80:80"
            - "8080:8080"
            - "443:443"
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock
            - ./traefik.toml:/etc/traefik/traefik.toml
            - ./acme:/etc/traefik/acme
    api:
        restart: always
        build: ./insapp-go
        volumes:
            - ./insapp-cdn/:/root/img/
        ports:
            - "REPLACE_WITH_THE_API_PORT:REPLACE_WITH_THE_API_PORT"
        labels:
            - "traefik.enable=true"
            - "traefik.backend=api"
            - "traefik.frontend.rule=Host:REPLACE_WITH_THE_HOST_DOMAIN;PathPrefixStrip:/api/v1"
        depends_on:
            - db
    web:
        restart: always
        build: ./insapp-web
        volumes:
            - ./insapp-cdn/:/var/insapp-cdn/
        labels:
            - "traefik.enable=true"
            - "traefik.backend=web"
            - "traefik.frontend.rule=Host:REPLACE_WITH_THE_HOST_DOMAIN"
        depends_on:
            - api
    db:
        restart: always
        image: mongo
        environment:
            - MONGO_INITDB_ROOT_USERNAME=insapp-admin
            - MONGO_INITDB_ROOT_PASSWORD=REPLACE_WITH_THE_MONGO_PASSWORD
        volumes:
            - ./insapp-db/:/data/db
    dropbox:
        restart: always
        build: ./insapp-backup
        volumes:
            - ./insapp-cdn/:/opt/Dropbox-Uploader/insapp-cdn/
